  <a class="carousel-control-prev d-flex justify-content-start ml-3" href="#carouselExampleIndicators" role="button"
    data-slide="prev">
    <span class="btn btn-round pt-1 pr-4 pl-0" aria-hidden="true">
      <h4>〈 </h4>
    </span>
    <span class="sr-only">Previous</span>
  </a>
  {{!-- 向後按鍵 --}}
  <a class="carousel-control-next d-flex justify-content-end mr-3" href="#carouselExampleIndicators" role="button"

<div id="card" class="container mt-5">
  <div class="row">
    <div class="card-body col-8 col-md-6 pt-3">
      <h4 class="card-title">
        會員：
        <span>{{profile.lastName}}</span>
        <span>{{profile.firstName}}</span>
      </h4>
      {{#ifCond profile.id user.id}}
      <a href="/orders" class="btn btn-secondary">訂單查詢</a>
      <a href="/users/{{profile.id}}/edit" class="btn btn-primary">帳號管理</a>
      <a href="/logout" class="btn btn-warning">登出</a>
      {{/ifCond}}
    </div>
  </div>

</div>